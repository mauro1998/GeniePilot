{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["DOM", "ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "importHelpers": true,
    "outDir": ".erb/dll"
  },
  "include": ["src/**/*", ".erb/**/*"],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
